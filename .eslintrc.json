{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "plugins": ["react-hooks", "prettier"],
  "rules": {
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false
      }
    ],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ]
      }
    ],
    "prettier/prettier": "error",
    "no-unused-vars": "error"
  }
}
